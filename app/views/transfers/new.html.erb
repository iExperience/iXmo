<h1>Welcome to iXmo</h1>

<p>Create a transfer here:</p>
<p><b>Your balance is: $<%= @user.account.balance.round() %></b>.</p>

<%= form_for(@transfer, url: '/transfers', method: 'post') do |f| %>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :receiver %>
    <%= f.number_field :receiver_id, :class => "form-control" %>
    <p>(Choose from <%= @account_ids %>)</p>
    <p>(Your account is <%= @user.account.id %>)</p>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Send transfer", :class => "btn btn-success" %>
  </div>
<% end %>

<%= link_to "View all transfers", "/transfers",
  :class => "btn btn-default" %>
<%= link_to "View account", "/account",
  :class => "btn btn-info" %>
